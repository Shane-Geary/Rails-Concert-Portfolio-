<h2>Create your Profile</h2>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %> 
    <br> 
    <%= f.submit "Submit" %>
    <br>
<% end %>